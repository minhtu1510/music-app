extends ../../layouts/default.pug
block main
  -if(role.permissions.includes("accounts_views"))
    h1(class="mb-4") #{pageTitle}
    form(
      action=`/${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Họ tên 
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          readonly
          value=account.fullName

        )
      div(class="form-group")
        label(for="email") Email 
        input(
          type="email"
          class="form-control"
          id="email"
          name="email"
          readonly
          value=account.email
        )
      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          readonly
          value=account.phone
        )
      div(
        class="form-group"
        upload-image
      )
        label(for="avatar") Avatar
          br
          img(
              src=account.avatar
              class="image-preview"
              upload-image-preview
          )
      div(class="form-group")
        label(for="role_id") Nhóm quyền
            input(
              type="text"
              class="form-control"
              id="phone_id"
              readonly
              value=role.title
              name="role_id"
            )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          disabled
          checked=(account.status == "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          disabled
          checked=(account.status == "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      br
      a(
          class="btn btn-primary"
          href=`/${prefixAdmin}/accounts`
        ) Trở về
  -else
    .forbidden Không có quyền truy cập