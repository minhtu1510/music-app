extends ../../layouts/default.pug
include ../../mixins/box-filter.pug
block main
  h1(class="mb-4") #{pageTitle}
  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-4
            +box-filter([
                {
                label: "Tất cả",
                value: ""
                },
                {
                label: "Hoạt động",
                value: "active"
                },
                {
                label: "Dừng hoạt động",
                value: "inactive"
                }
            ])
        .col-8
            include ../../partials/form-search.pug

  .card.mb-3
      .card-header Danh sách
      .card-body
        .row.mb-3
          .col-6
            form(
              form-change-multi
              data-path=`/${prefixAdmin}/songs/change-multi`
            )
              .input-group
                select(name="status" class="form-control")
                  option(value="active") Hoạt động
                  option(value="inactive") Dừng hoạt động
                .input-group-append
                  button(
                    class="btn btn-success"
                    type="submit"
                  ) Áp dụng
        .row
          .col-8
            
          .col-4.text-right
            a(
              href=`/${prefixAdmin}/songs/create`
              class="btn btn-outline-success"
            ) + Thêm mới
        table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th
              th STT
              th Hình ảnh
              th Tiêu đề
              //- th Ca sĩ
              //- th Chủ đề
              //- th Vị trí
              th Trạng thái
              th Hành động
          tbody
            each item, index in songs
              tr 
                td
                  input(
                    type="checkbox"
                    input-change=item.id
                  )
                td #{index+limit*(currentPage-1)+1}
                td
                  img(
                    src=item.avatar
                    alt=item.title
                    width="80px"
                    height="auto"
                  )
                td #{item.title}
                //- td Dữ liệu ca sĩ
                //- td Dữ liệu chủ đề
                //- td Dữ liệu vị trí
                td
                  if (item.status === "active")
                    a(
                      href="javascript:;"
                      class="badge badge-success"
                    ) Hoạt động
                  else
                    a(
                      href="javascript:;"
                      class="badge badge-danger"
                    ) Dừng hoạt động
                td
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`/${prefixAdmin}/songs/detail/${item.id}`
                  ) Chi tiết
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`/${prefixAdmin}/songs/edit/${item.id}`
                  ) Sửa
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    item-id=item.id
                    button-delete
                    data-path=`/${prefixAdmin}/songs/delete`
                  ) Xóa

  nav(class="mt-3")
    ul(class="pagination")
      if(currentPage > 1)
        li(class="page-item")
          button(class="page-link" button-pagination=currentPage-1) Trang trước
      - for (var i = 1; i <= totalPage; i++)
        li(class="page-item")
          button(class="page-link" button-pagination=i) #{i}
      if(currentPage < totalPage)
        li(class="page-item")
          button(class="page-link" button-pagination=currentPage+1) Kế tiếp