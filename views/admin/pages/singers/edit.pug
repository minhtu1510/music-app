extends ../../layouts/default.pug
block main
  -if(role.permissions.includes("singers_edit"))
    h1(class="mb-4") #{pageTitle}
    form(
        action=`/${prefixAdmin}/singers/edit/${singer.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
      )
        div(class="form-group")
          label(for="title") Tên ca sĩ
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
            value=singer.fullName
          )
        div(
          class="form-group"
          upload-image
        )
          label(for="avatar") Ảnh
          input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )
          img(
            src=singer.avatar
            class="image-preview"
            upload-image-preview
          )
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(singer.status == "active" ? true : false)
          )
          label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInActive"
            name="status"
            value="inactive"
            checked=(singer.status == "inactive" ? true : false)
          )
          label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhật
  -else
    .forbidden Không có quyền truy cập