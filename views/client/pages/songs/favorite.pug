extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
  .row
    .col-12
      +box-head(pageTitle)
  .row
    each song in songs
      .col-6.mb-3
        div(class="song-item")
          div(class="inner-image")
            a(href=`/songs/detail/${song.slug}`)
              img(src=song.avatar)
          div(class="inner-content")
            div(class="inner-title")
              a(href=`/songs/detail/${song.slug}`) #{song.title}
            div(class="inner-singer") <i class="fa-solid fa-microphone-lines"></i> #{song.nameSinger}
            div(class="inner-action inner-heart " +(song.favorite ? "active":"")
               button-favorite=song.songId user-id=(users && users.id ? users.id : ""))
              <i class="fa-regular fa-heart "></i> Yêu thích
            div(class="inner-time") <i class="fa-regular fa-clock"></i> #{song.createdAtFormat}


